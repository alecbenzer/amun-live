<script src="http://js.pusherapp.com/1.6/pusher.js" type="text/javascript"></script>
<script type="text/javascript">
var pusher = new Pusher('f456a35f16674d11f83a');
pusher.subscribe('messages');
pusher.bind('new_message', function(data) {
    alert("woot!");
    });
</script>
<header id="banner" class="body">
<h1><a href="/">AMUN <%=conference_year%><br /><strong>Academy Model UN Conference</strong></a></h1>
</header>

<section id="committees" class="body content">
  <%= render :partial => "committee/committee", :collection => @committees %>
</section>
  
<section id="feed" class="body content">
  <ol id="msg-feed" class="hfeed">
    <% @messages.each do |msg| %>
      <li><div class="msg">
        <h2 class="poster"><%= msg.committee.acronym %>:</h2>
        <p class="msg-text"><%= msg.text %></p>
      </div></li>
    <% end %>
  </ol>
</section>
